<?xml version="1.0" encoding="UTF-8"?>

<mime-info>
  <mime-type type="text/plain">
    <!--
      e.g. `nginx.conf` or anything that ships with FreeBSD.
    -->
    <glob pattern="*.conf"/>
    <magic priority="33">
      <!--
        https://www.unicode.org/faq/utf_bom.html
        https://en.wikipedia.org/wiki/Byte_order_mark
        https://docs.microsoft.com/en-us/windows/win32/intl/using-byte-order-marks
      -->
      <match type="host16" value="0xFFFE" offset="0"/>      <!-- UTF-16 -->
      <match type="host32" value="0xFFFE0000" offset="0"/>  <!-- UTF-32 -->
      <match type="byte" value="0xEF" offset="0">
        <match type="byte" value="0xBB" offset="1">
          <match type="byte" value="0xBF" offset="2"/>      <!-- UTF-8  -->
        </match>
      </match>
    </magic>
  </mime-type>

  <!--
    TODO: Re-enable this glob when I have a better way to hint the CYO interface.
          Its `*.v` conflicts with libvips' native-format extname.
  -->
  <mime-type type="text/x-verilog">
    <glob-deleteall/>
  </mime-type>
</mime-info>
