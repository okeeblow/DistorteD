<div class="image-wrapper {{ float }}" >
    {% if href %}
        {% if href == 'original' %}
            {%- capture href %}{{ path }}{{ name }}{% endcapture -%}
        {% else %}
            {%- assign href = href -%}
        {% endif %}
        <a href="{{ href }}" title="{{ title }}" target="_blank">
    {% endif %}
    <img src="{{ path }}/{{ name }}" alt="{{ alt }}" title="{{ title }}"/>
    {% if href %}
    </a>
    {% endif %}
    {% if caption %}
        <p class="image-caption">{{ caption }}</p>
    {% endif %}
</div>
